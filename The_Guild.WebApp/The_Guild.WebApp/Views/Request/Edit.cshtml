@model The_Guild.WebApp.ViewModel.RequestViewModel

@{
    ViewData["Title"] = "Edit";
}
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Styles/User.css" rel="stylesheet" type="text/css" />
</head>

<body class="user-bg1">
    <h1 class="user-default user-pad">Edit</h1>
    <div class="user-default user-pad">
        <a asp-action="Index" class="user-button">Back to List</a>
    </div>
    <div class="user-create user-pad">
        <div class="col-md-4">
            <form asp-action="Edit" class="user-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Descript" class="control-label"></label>
                    <input asp-for="Descript" class="form-control" />
                    <span asp-validation-for="Descript" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Requirements" class="control-label"></label>
                    <input asp-for="Requirements" class="form-control" />
                    <span asp-validation-for="Requirements" class="text-danger"></span>
                </div>
                @if (Model.Reward == null)
                {
                    <div class="form-group">
                        <label asp-for="Reward" class="control-label"></label>
                        <input asp-for="Reward" class="form-control" placeholder="N/A" />
                        <span asp-validation-for="Reward" class="text-danger"></span>
                    </div>
                }
                else
                {
                    <div class="form-group">
                        <label asp-for="Reward" class="control-label"></label>
                        <input asp-for="Reward" class="form-control" />
                        <span asp-validation-for="Reward" class="text-danger"></span>
                    </div>
                }
                @if (Model.progresses != null)
                {
                    <div class="form-group">
                        <label asp-for="Progress" class="control-label"></label>
                        <select asp-for="Progress.Id"
                                asp-items="@(new SelectList(Model.progresses, "Id", "Nam"))" class="form-control"></select>
                    </div>
                }
                @if (Model.ranks != null)
                {
                    <div class="form-group">
                        <label asp-for="Rank" class="control-label"></label>
                        <select asp-for="Rank.Id"
                                asp-items="@(new SelectList(Model.ranks, "Id", "Name"))" class="form-control"></select>
                    </div>
                }
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
