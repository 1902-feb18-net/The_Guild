@model The_Guild.WebApp.ViewModel.RequestViewModel

@{
    ViewData["Title"] = "Details";
}
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Styles/User.css" rel="stylesheet" type="text/css" />
</head>

<body class="user-bg1">
    <h1 class="user-pad">Details</h1>
    <div class="user-pad">
        <span class="user-button">
            @Html.ActionLink("Edit", "Edit", new { id = Model.Id })
        </span>
        <a asp-action="Index" class="user-button">Back to List</a>
    </div>

    <div class="user-pad user-pad-ri">
        <dl class="row user-form">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10 user-center">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descript)
            </dt>
            <dd class="col-sm-10 user-center">
                @Html.DisplayFor(model => model.Descript)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Requirements)
            </dt>
            <dd class="col-sm-10 user-center">
                @Html.DisplayFor(model => model.Requirements)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Reward)
            </dt>
            @if (Model.Reward != null)
            {
                <dd class="col-sm-10 user-center">
                    @Html.DisplayFor(model => model.Reward)
                </dd>
            }
            else
            {
                <dd class="col-sm-10 user-center">
                    @Html.Raw("N/A")
                </dd>
            }
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Progress)
            </dt>
            <dd class="col-sm-10 user-center">
                @Html.DisplayFor(model => model.Progress.Nam)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Rank)
            </dt>
            @if (Model.Rank != null && Model.Rank.Name != null)
            {
                <dd class="col-sm-10 user-center">
                    @Html.DisplayFor(model => model.Rank.Name)
                </dd>
            }
            else
            {
                <dd class="col-sm-10 user-center">
                    @Html.Raw("TBD")
                </dd>
            }
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cost)
            </dt>
            @if (Model.Cost != null)
            {
                <dd class="col-sm-10 user-center">
                    @Html.DisplayFor(model => model.Cost)
                </dd>
            }
            else
            {
                <dd class="col-sm-10 user-center">
                    @Html.Raw("TBD")
                </dd>
            }
        </dl>
    </div>
</body>
