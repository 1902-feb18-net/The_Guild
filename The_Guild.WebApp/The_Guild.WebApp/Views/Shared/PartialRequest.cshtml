@model The_Guild.WebApp.Models.Request

<div class="user-pad user-pad-ri">
    <dl class="row user-form">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10 user-center">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descript)
        </dt>
        <dd class="col-sm-10 user-center">
            @Html.DisplayFor(model => model.Descript)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Requirements)
        </dt>
        <dd class="col-sm-10 user-center">
            @Html.DisplayFor(model => model.Requirements)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reward)
        </dt>
        @if (Model.Reward != null)
        {
            <dd class="col-sm-10 user-center">
                @Html.DisplayFor(model => model.Reward)
            </dd>
        }
        else
        {
            <dd class="col-sm-10 user-center">
                @Html.Raw("N/A")
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProgressId)
        </dt>
        <dd class="col-sm-10 user-center">
            @Html.DisplayFor(model => model.ProgressId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RankId)
        </dt>
        @if (Model.RankId != null)
        {
            <dd class="col-sm-10 user-center">
                @Html.DisplayFor(model => model.RankId)
            </dd>
        }
        else
        {
            <dd class="col-sm-10 user-center">
                @Html.Raw("TBD")
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cost)
        </dt>
        @if (Model.Cost != null)
        {
            <dd class="col-sm-10 user-center">
                @Html.DisplayFor(model => model.Cost)
            </dd>
        }
        else
        {
            <dd class="col-sm-10 user-center">
                @Html.Raw("TBD")
            </dd>
        }
    </dl>
</div>