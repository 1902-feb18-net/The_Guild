@model IEnumerable<The_Guild.WebApp.Models.Ranks>

@{
    ViewData["Title"] = "Ranks";
    var account = ViewData["accountDetails"] as The_Guild.WebApp.ApiModels.ApiAccountDetails;
}
<head>
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Styles/User.css" rel="stylesheet" type="text/css" />
</head>

<body class="user-bg1">
    <h1 class="user-default text-shadow">Ranks</h1>
    <p class="user-default">
        <a asp-action="Create" class="user-button">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr class="user-table-header">
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fee)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="user-table-row">
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fee)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                        @if (account?.Roles?.Contains("receptionist") ?? false)
                        {
                            @:| @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            @:| @Html.ActionLink("Edit", "Edit", new { id = item.Id })

                        }

                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
